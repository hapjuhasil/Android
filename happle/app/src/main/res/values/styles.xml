<resources>
    <!-- 기존 스타일 리소스들 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryDark">@color/purple_100</item>
        <item name="colorAccent">@color/purple_100</item>
    </style>

    <!-- BottomNavigationView 스타일 -->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="RoundedImage">
        <item name="shapeAppearanceOverlay">@style/Circle</item>
    </style>

    <style name="Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
